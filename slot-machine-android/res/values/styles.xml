<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="defaultTheme" parent="Theme.Sherlock.Light">
		<item name="android:windowBackground">@drawable/background_blue_gradient</item>
	</style>

	<style name="button" parent="@style/whiteShadowText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">120dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:minHeight">@null</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>